@model Instructor;
<h1>Create a new Instructor</h1>

<form action="AddInstructor" method="post">
    <div class="form-group mb-2">
        <label asp-for="Id" class="form-label">ID</label>
        <input asp-for="Id" class="form-control">
    </div>

    <div class="form-group mb-2">
        <label asp-for="FirstName" class="form-label">First Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group mb-2">
        <label asp-for="LastName" class="form-label">Last Name</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group mb-2">
        <label asp-for="Rank" class="form-label">Rank</label>
        <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control"></select>
    </div>

    <div class="form-group mb-2">
        <label asp-for="IsTenured" class="form-label">Status</label>
        <input asp-for="IsTenured" class="form-control">
    </div>

    <div class="form-group mb-2">
        <label asp-for="HiringDate" class="form-label">Hiring Date</label>
        <input asp-for="HiringDate" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
