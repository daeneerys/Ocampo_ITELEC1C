@model Instructor;
<h1>Create a new Instructor</h1>

<form action="AddInstructor" method="post">

    <div class="form-group mb-2">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Rank" class="form-label"></label>
        <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control"></select>
        <span asp-validation-for="Rank" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="IsTenured" class="form-label"></label>
        <input asp-for="IsTenured" class="form-control">
        <span asp-validation-for="IsTenured" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="HiringDate" class="form-label"></label>
        <input asp-for="HiringDate" class="form-control">
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
