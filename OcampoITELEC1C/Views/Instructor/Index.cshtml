@model IEnumerable<Instructor>;
@{
ViewData["Title"] = "Instructor";

<div>Instructor List</div>
   
  <a class = "btn btn-primary mb-3 mt-3" type = "button" asp-action="AddInstructor">
    Add Instructor
  </a>

  <table class = "table table-dark">

    <tr>
        <th colspan="7">Instructors</th>
    </tr>

    <tr>
        <td>Name</td>
        <td>ID Number</td>
        <td>Status</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Details</td>
        <td>Edit</td>


    </tr>
    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.FirstName @instructor.LastName</td>
            <td>@instructor.Id</td>
            <td>@instructor.IsTenured</td>
            <td>@instructor.Rank</td>
            <td>@instructor.HiringDate</td>
            <td><a asp-action="ShowDetail" asp-route-id="@instructor.Id">Show Details</a></td>
            <td><a class="btn btn-primary" type="button" asp-action="Edit" asp-route-id="@instructor.Id">Edit</a></td>

        </tr>
    }
    </table>
}